<%- include('partials/header') %>
    <h1>Todos los Productos</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Código</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Stock</th>
                <th>Stock Min</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product=> { %>
                <tr>
                    <td>
                        <%= product.id %>
                    </td>
                    <td>
                        <%= product.codigo %>
                    </td>
                    <td>
                        <%= product.nombre %>
                    </td>
                    <td>
                        <%= product.categoria %>
                    </td>
                    <td>
                        <%= product.stock %>
                    </td>
                    <td>
                        <%= product.stockmin %>
                    </td>
                    <td>
                        <%= product.precio %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <a href="/" class="btn btn-secondary mt-3">Regresar</a>
    <%- include('partials/footer') %>